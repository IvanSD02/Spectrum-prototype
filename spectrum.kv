            HoverTextBox:
                id: pwd
                hint_text: "Password"
                icon_right: "lock"
                size_hint_x: None
                width: 200
                font_size: 20
                pos_hint: {"center_x": 0.5}
                password: True

            HoverTextBox:
                id: repwd
                hint_text: "Repeat Password"
                icon_right: "lock"
