<CustomDialog>:
    title: "Please follow the guideline below:"
    text: "For a strong password you should include the following:\n - one capital letter\n - two small letters\n - one number\n - one special symbol (!, @, #, $, %, ^, &, *)\n"
    elevation: 6
    shadow_radius: 18
    shadow_softness: 24
    shadow_offset: 12, 12
    radius: [20, 20, 20, 20]

    BoxLayout:
        orientation: 'vertical'
        padding: (0, 0, 0, 20)
        MDFlatButton:
            size_hint_y: None
            elevation: 5
            pos_hint:{"center_x": 0.5}
            text: "OK"
            theme_text_color: "Custom"
            text_color: self.theme_cls.primary_color
            on_release: root.dismiss()

