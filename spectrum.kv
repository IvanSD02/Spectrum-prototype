<ChooseTypeAccountPage>:
    name: "choose_type_account"

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'resources/orange_bg2.jpg'

    BoxLayout:
        orientation: 'horizontal'
        spacing: 40
        padding: (40, 0, 40, 0)

        HoverCardChooseProfile:
            orientation: 'vertical'
            size_hint: 0.3, 0.5
            pos_hint: {"center_x":0.5, "center_y":0.5}
            font_size: 32
            md_bg_color: (255, 255, 255, 1)
            text_color: 1, 1, 1, 1
            line_width: 2
            line_color: 0, 0, 0, 1
            elevation: 6
            spacing: 25
            padding: (0, 50, 0, 50)

            on_release:
                root.manager.transition.direction = "left"
                app.root.current = "next"

            Image:
                pos_hint: {"center_x":0.5, "center_y":0.5}
                source: 'resources/adult_with_kid.png'
                size_hint: .5, .5

            Label:
                text: "PARENTAL"
                color: (0, 130/255, 242/255, 0.8)
                padding: (0, 20, 0, 20)
                font_size: 40
                font_style: 'Calibre'
                size_hint: .1, .1
                pos_hint: {"center_x":0.5, "y":0.3}
                outline_width: 3
                outline_color: (0, 0, 0, 1)

        HoverCardChooseProfile:
            orientation: 'vertical'
            size_hint: 0.3, 0.5
            pos_hint: {"center_x":0.5, "center_y":0.5}
            font_size: 32
            md_bg_color: (255, 255, 255, 1)
            text_color: 1, 1, 1, 1
            line_width: 2
            line_color: 0, 0, 0, 1
            elevation: 6
            spacing: 25
            padding: (0, 50, 0, 50)

            on_release:
                root.manager.transition.direction = "left"
                app.root.current = "next"

            Image:
                pos_hint: {"center_x":0.5, "center_y":0.5}
                source: 'resources/adult.png'
                size_hint: .5, .5

            Label:
                text: "PERSONAL"
                color: (0, 130/255, 242/255, 0.8)
                padding: (0, 20, 0, 20)
                font_size: 40
                font_style: 'Calibre'
                size_hint: .1, .1
                pos_hint: {"center_x":0.5, "y":0.3}
                outline_width: 3
                outline_color: (0, 0, 0, 1)


<CustomDialog>:
    title: "Please follow the guideline below:"
    text: "For a strong password you should include the following:\n - one capital letter\n - two small letters\n - one number\n - one special symbol (!, @, #, $, %, ^, &, *)\n"
    elevation: 6
    shadow_radius: 18
    shadow_softness: 24
    shadow_offset: 12, 12
    radius: [20, 20, 20, 20]

    BoxLayout:
        orientation: 'vertical'
        padding: (0, 0, 0, 20)
        MDFlatButton:
            size_hint_y: None
            elevation: 5
            pos_hint:{"center_x": 0.5}
            text: "OK"
            theme_text_color: "Custom"
            text_color: self.theme_cls.primary_color
            on_release: root.dismiss()

