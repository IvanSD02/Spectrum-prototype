<MainPage>:
    name: "main"

    canvas.before:
        Rectangle:
            source: "resources/mainbg.jpg"
            size: root.width, root.height

    FloatLayout:
        orientation: "vertical"

        Label:
            id: title
            opacity: 0
            center: 400, -self.height
            text: "SPECTRUM"
            color:(0, 0, 198, 0.56)
            font_size: 60
            size_hint: .0, .0
            pos_hint:{"center_x":0.5, "y":0.7}
            outline_width: 3
            outline_color:(0, 0 ,0)

        FloatLayout:
            orientation: "vertical"

            HoverButtonMainPage:
                size_hint: 0.2, 0.1
                text: "START"
                pos_hint: {"center_x":0.5, "center_y":0.5}
                font_size: 32
                md_bg_color: (0, 130/255, 242/255, 0.8)
                text_color: 1, 1, 1, 1
                line_width: 2
                line_color: 0, 0, 0, 1
                on_release:
                    root.manager.transition.direction = "left"
                    app.root.current = "login"

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        pos_hint: {"x":.075}

        Image:
            source: 'resources/kid.gif'
            size_hint: .3, .3

<LoginPage>:
    name: "login"

    canvas.before:
        Rectangle:
            source: "resources/purple_bg3.jpg"
            size: root.width, root.height

    FloatLayout:

        MDIconButton:
            icon: "chevron-left"
            md_bg_color: "snow"
            size_hint: .05, .06
            user_font_size: "40sp"
            pos_hint: {"center_x":.035, "center_y":.95}
            theme_text_color:"Custom"
            text_color: 1, 170/255, 23/255, 1
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"

        MDBoxLayout:
            orientation: 'vertical'
            padding: (0, 50, 0, 50)

            MDCard:
                size_hint: 0.6, 0.7
                pos_hint: {"center_x":0.5,"center_y":0.5}
                elevation: 9
                spacing: 25
                orientation: 'vertical'
                line_width:4
                line_color:(0,0,0,0.5)
                padding: (0, 50, 0, 20)

                Label:
                    id: title
                    text: "Your Own PERSONAL Space !"
                    color: "purple"
                    padding: (0, 20, 0, 20)
                    font_size: 40
                    font_style: 'Calibre'
                    size_hint: .1, .1
                    pos_hint: {"center_x":0.5, "y":0.3}
                    outline_width: 3
                    outline_color: (0, 0, 0, 1)

                HoverTextBox:
                    id: uid
                    hint_text: "Username"
                    icon_right: "account"
                    size_hint_x: None
                    width: 200
                    font_size: 20
                    pos_hint: {"center_x": 0.5}

                HoverTextBox:
                    id: pwd
                    hint_text: "Password"
                    icon_right: "lock"
                    size_hint_x: None
                    width: 200
                    font_size: 20
                    pos_hint: {"center_x": 0.5}
                    password: True

                HoverButtonPurpleDesign:
                    text: "LOGIN"
                    font_size: 20
                    pos_hint: {"center_x": 0.5}
                    on_press:
                        root.logIn()
                    line_width: 1.2
                    line_color:"purple"
                    text_color:"purple"
                    md_bg_color:(1,1,1,1)

                HoverButtonPurpleDesign:
                    text: "CLEAR"
                    font_size: 20
                    pos_hint: {"center_x": 0.5}
                    on_press: root.clear()
                    line_width: 1.2
                    line_color:"purple"
                    text_color:"purple"
                    md_bg_color:(1,1,1,1)

                MDLabel:
                    opacity: 0
                    id: error_label
                    text: "Invalid Login"
                    font_size: 14
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    pos_hint: {"center_x": 0.5}
                    theme_text_color:'Custom'
                    text_color: 1,0,0,1

                MDLabel:
                    id: signup_label
                    text: "You don't have an account?"
                    font_size: 15
                    halign:'center'
                    pos_hint: {"center_x": 0.5}
                    text_color: 0,0,1,0

                HoverButtonPurpleDesign:
                    id: signup_button
                    text: "SIGN UP"
                    font_size: 25
                    pos_hint: {"center_x": 0.5}
                    line_width: 2
                    theme_text_color: "Custom"
                    line_color:"purple"
                    text_color:"purple"
                    md_bg_color:(1,1,1,1)
                    on_release:
                        root.manager.transition.direction = "left"
                        app.root.current = "signup"

                MDAnchorLayout:
                    anchor_x: 'right'
                    anchor_y: 'bottom'
                    size_hint: 20.1, 20.1
                    pos_hint: {"center_x": 0.5}

                    Image:
                        id: circle
                        opacity: 0
                        source: 'resources/circle.gif'


<SignupPage>:
    name:'signup'

    canvas.before:
        Rectangle:
            source: 'resources/purple_bg2.png'
            size: root.width, root.height

    MDIconButton:
        icon: "chevron-left"
        md_bg_color: "snow"
        size_hint: .05, .06
        user_font_size: "40sp"
        pos_hint: {"center_x":.035, "center_y":.95}
        theme_text_color:"Custom"
        text_color: 1, 170/255, 23/255, 1
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = "main"

    BoxLayout:
        orientation: 'vertical'
        padding: (0, 50, 0, 50)

        MDCard:
            size_hint: 0.6, 0.7
            pos_hint: {"center_x":0.5,"center_y":0.5}
            elevation: 6
            spacing: 25
            padding: (0, 50, 0, 100)
            orientation: 'vertical'
            line_width:4
            line_color:(0,0,0,0.5)

            Label:
                id: title
                text: "Create an account"
                color:"purple"
                font_size:50
                size_hint:.1,.1
                pos_hint:{"center_x":0.5, "y":0.3}
                outline_width: 3
                outline_color:(0,0,0,1)

            HoverTextBox:
                id: uid
                hint_text: "Username"
                icon_right: "account"
                size_hint_x: None
                width: 200
                font_size: 20
                pos_hint: {"center_x": 0.5}

            HoverTextBox:
                id: pwd
                hint_text: "Password"
                icon_right: "lock"
                size_hint_x: None
                width: 200
                font_size: 20
                pos_hint: {"center_x": 0.5}
                password: True

            HoverTextBox:
                id: repwd
                hint_text: "Repeat Password"
                icon_right: "lock"
                size_hint_x: None
                width: 200
                font_size: 20
                pos_hint: {"center_x": 0.5}
                password: True

            MDLabel:
                opacity: 0
                id: error_label
                text: "Account already exists!"
                font_size: 14
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                pos_hint: {"center_x": 0.5}
                theme_text_color:'Custom'
                text_color: 1,0,0,1

            HoverButtonPurpleDesign:
                id: signup_button
                text: "SIGN UP"
                font_size: 25
                pos_hint: {"center_x": 0.5}
                line_width: 2
                theme_text_color: "Custom"
                line_color: "black"
                text_color: "black"
                md_bg_color: (1, 1, 1, 1)
                on_press: root.create_account()

            HoverButtonPurpleDesign:
                id: back_button
                text: "GO BACK"
                font_size: 25
                pos_hint: {"center_x": 0.5}
                line_width: 2
                theme_text_color: "Custom"
                line_color:"purple"
                text_color:"purple"
                md_bg_color:(1,1,1,1)

                on_release:
                    root.manager.transition.direction = "right"
                    app.root.current = "login"

